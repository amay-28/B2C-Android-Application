                    <TextView
                        android:id="@+id/tv_enable"
                        style="@style/SettingsStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@id/sw_enable"

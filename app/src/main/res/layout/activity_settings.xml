                    android:layout_marginTop="@dimen/_10sdp">

                    <ImageView
                        android:id="@+id/cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_settings_cancel" />

                    <RelativeLayout
                        android:layout_width="wrap_content"

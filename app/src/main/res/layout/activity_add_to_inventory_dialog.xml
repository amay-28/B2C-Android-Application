<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent">

        <androidx.cardview.widget.CardView
            android:id="@+id/linearLayoutRoot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:background="@color/transparent"
            app:cardCornerRadius="@dimen/_5sdp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/_13sdp"
                android:paddingRight="@dimen/_13sdp">

                <ImageView
                    android:id="@+id/ivCross"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="end"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:src="@drawable/ic_cross" />

                <LinearLayout
                    android:id="@+id/llHead"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_30sdp">

                    <ImageView
                        android:id="@+id/ivProduct"
                        android:layout_width="@dimen/_95sdp"
                        android:layout_height="@dimen/_100sdp"
                        android:layout_below="@+id/ivCross"
                        android:src="@drawable/ic_default_product" />

                    <RelativeLayout
                        android:id="@+id/rlDetails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_13sdp"
                        android:layout_toRightOf="@id/ivProduct">

                        <TextView
                            android:id="@+id/tvProductName"
                            style="@style/TextView12ssp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/latosemibold"
                            android:text="Kook N Keech"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/tvProductDescription"
                            style="@style/TextView10ssp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tvProductName"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/latoregular"
                            android:singleLine="true"
                            android:text="Men Regular Fit Blue Shirt"
                            android:textColor="@color/color_light_text" />


                        <TextView
                            android:id="@+id/tvLengthHead"
                            style="@style/TextView10ssp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvProductDescription"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:fontFamily="@font/latomedium"
                            android:text="@string/Length" />

                        <TextView
                            android:id="@+id/tvLength"
                            style="@style/TextView10ssp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvProductDescription"
                            android:layout_marginLeft="@dimen/_15sdp"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:layout_toRightOf="@+id/tvLengthHead"
                            android:fontFamily="@font/latoregular"
                            android:text="Cotton"
                            android:textColor="@color/color_grey_text" />


                        <TextView
                            android:id="@+id/tvSizeAndFitHead"
                            style="@style/TextView10ssp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvLengthHead"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:fontFamily="@font/latomedium"
                            android:singleLine="true"
                            android:text="@string/size_and_fit" />

                        <TextView
                            android:id="@+id/tvSizeAndFit"
                            style="@style/TextView10ssp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvLength"
                            android:layout_marginLeft="@dimen/_13sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_toRightOf="@+id/tvSizeAndFitHead"
                            android:fontFamily="@font/latoregular"
                            android:text="Slim Fit"
                            android:textColor="@color/color_grey_text" />


                        <TextView
                            android:id="@+id/tvMaterialHead"
                            style="@style/TextView10ssp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvSizeAndFitHead"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:fontFamily="@font/latomedium"
                            android:text="@string/Material" />

                        <TextView
                            android:id="@+id/tvMaterial"
                            style="@style/TextView10ssp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvSizeAndFitHead"
                            android:layout_marginLeft="@dimen/_13sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_toRightOf="@+id/tvMaterialHead"
                            android:fontFamily="@font/latoregular"
                            android:text="Regular"
                            android:textColor="@color/color_grey_text" />

                    </RelativeLayout>

                </LinearLayout>


                <TextView
                    android:id="@+id/priceHead"
                    style="@style/TextView12ssp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/llHead"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:fontFamily="@font/latosemibold"
                    android:text="@string/Price" />

                <TextView
                    android:id="@+id/tvPriceRs"
                    style="@style/TextView12ssp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/priceHead"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:fontFamily="@font/latomedium"
                    android:textColor="@color/color_grey_text"
                    android:text="Rs." />

                <TextView
                    android:id="@+id/tvPrice"
                    style="@style/TextView12ssp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/priceHead"
                    android:layout_toRightOf="@+id/tvPriceRs"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:fontFamily="@font/latomedium"
                    android:textColor="@color/color_grey_text"
                    android:text="" />

                <TextView
                    android:id="@+id/yourMarginHead"
                    style="@style/TextView12ssp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvPrice"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:fontFamily="@font/latosemibold"
                    android:text="@string/Your_Margin" />

                <TextView
                    android:id="@+id/tvMarginRs"
                    style="@style/TextView12ssp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/yourMarginHead"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:fontFamily="@font/latomedium"
                    android:textColor="@color/color_grey_text"
                    android:text="Rs." />

                <EditText
                    android:id="@+id/etMargin"
                    style="@style/TextView12ssp"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/yourMarginHead"
                    android:layout_toRightOf="@+id/tvMarginRs"
                    android:fontFamily="@font/latomedium"
                    android:inputType="number"
                    android:maxLength="4"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:textColor="@color/color_grey_text"
                    android:text="" />

                <TextView
                    android:id="@+id/SellingPriceHead"
                    style="@style/TextView12ssp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/etMargin"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:fontFamily="@font/latosemibold"
                    android:text="@string/Selling_Price" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/etMargin"
                    android:layout_alignParentRight="true">

                    <TextView
                        android:id="@+id/tvGSTRs"
                        style="@style/TextView12ssp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:fontFamily="@font/latomedium"
                        android:textColor="@color/color_grey_text"
                        android:text="GST: Rs." />


                    <TextView
                        android:id="@+id/tvGST"
                        style="@style/TextView12ssp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/tvGSTRs"
                        android:layout_marginLeft="@dimen/_3sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:fontFamily="@font/latomedium"
                        android:textColor="@color/color_grey_text"
                        android:text="" />


                </RelativeLayout>

                <TextView
                    android:id="@+id/tvSpRs"
                    style="@style/TextView12ssp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/SellingPriceHead"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:fontFamily="@font/latomedium"
                    android:textColor="@color/color_grey_text"
                    android:text="Rs." />

                <TextView
                    android:id="@+id/tvSellingPrice"
                    style="@style/TextView12ssp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/SellingPriceHead"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:layout_toRightOf="@+id/tvSpRs"
                    android:fontFamily="@font/latomedium"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:textColor="@color/color_grey_text"
                    android:text="" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSave"
                    style="@style/material_button"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_40sdp"
                    android:layout_marginRight="@dimen/_40sdp"
                    android:backgroundTint="@color/yellow"
                    android:layout_below="@+id/tvSellingPrice"
                    android:text="@string/Add_to_your_Inventory"
                    android:textSize="@dimen/_12ssp"
                    app:cornerRadius="@dimen/_3sdp" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
</layout>

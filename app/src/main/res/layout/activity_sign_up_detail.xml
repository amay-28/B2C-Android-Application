<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".auth.activity.SignUpDetailActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_header" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/_30sdp"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_30sdp"
                    android:paddingBottom="@dimen/_20sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                style="@style/TextView12ssp"
                                android:fontFamily="@font/latobold"
                                android:text="@string/sign_up"
                                android:textSize="@dimen/_22sdp" />

                            <TextView
                                style="@style/TextView14ssp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:fontFamily="@font/latomedium"
                                android:text="@string/sign_in_to_create_acc"
                                android:textColor="@color/colorHint" />

                        </LinearLayout>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_bucket" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/etShopName"
                        style="@style/EditText12ssp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:background="@drawable/rect_back_with_corner"
                        android:hint="@string/shop_name"
                        android:imeOptions="actionNext"
                        android:inputType="textPersonName"
                        android:maxLength="30"
                        android:minHeight="@dimen/_50sdp"
                        android:paddingStart="@dimen/_10sdp"
                        android:paddingEnd="@dimen/_10sdp"
                        android:singleLine="true" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_below="@+id/imgShop"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:background="@drawable/rect_back_with_corner">

                        <Spinner
                            android:id="@+id/spnCategory"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"></Spinner>

                    </LinearLayout>

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chipGroup"
                        style="@style/Widget.MaterialComponents.Chip.Action"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp">

                    </com.google.android.material.chip.ChipGroup>

                    <EditText
                        android:id="@+id/etAddressOne"
                        style="@style/EditText12ssp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:background="@drawable/rect_back_with_corner"
                        android:hint="@string/address_line_one"
                        android:imeOptions="actionNext"
                        android:inputType="textPersonName"
                        android:maxLength="60"
                        android:minHeight="@dimen/_50sdp"
                        android:paddingStart="@dimen/_10sdp"
                        android:paddingEnd="@dimen/_10sdp"
                        android:singleLine="true" />

                    <EditText
                        android:id="@+id/etAddressTwo"
                        style="@style/EditText12ssp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:background="@drawable/rect_back_with_corner"
                        android:hint="@string/address_line_two"
                        android:imeOptions="actionNext"
                        android:inputType="textPersonName"
                        android:maxLength="60"
                        android:minHeight="@dimen/_50sdp"
                        android:paddingStart="@dimen/_10sdp"
                        android:paddingEnd="@dimen/_10sdp"
                        android:singleLine="true" />

                    <EditText
                        android:id="@+id/etCity"
                        style="@style/EditText12ssp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:background="@drawable/rect_back_with_corner"
                        android:hint="@string/city"
                        android:imeOptions="actionNext"
                        android:inputType="textPersonName"
                        android:maxLength="30"
                        android:minHeight="@dimen/_50sdp"
                        android:paddingStart="@dimen/_10sdp"
                        android:paddingEnd="@dimen/_10sdp"
                        android:singleLine="true" />

                    <EditText
                        android:id="@+id/etState"
                        style="@style/EditText12ssp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:background="@drawable/rect_back_with_corner"
                        android:hint="@string/state"
                        android:imeOptions="actionNext"
                        android:inputType="textPersonName"
                        android:maxLength="30"
                        android:minHeight="@dimen/_50sdp"
                        android:paddingStart="@dimen/_10sdp"
                        android:paddingEnd="@dimen/_10sdp"
                        android:singleLine="true" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_below="@+id/imgShop"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:background="@drawable/rect_back_with_corner">

                        <Spinner
                            android:id="@+id/spnGstNo"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"></Spinner>

                    </LinearLayout>

                    <EditText
                        android:id="@+id/etEmail"
                        style="@style/EditText12ssp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:background="@drawable/rect_back_with_corner"
                        android:hint="@string/email_optional"
                        android:imeOptions="actionDone"
                        android:inputType="textEmailAddress"
                        android:maxLength="30"
                        android:minHeight="@dimen/_50sdp"
                        android:paddingStart="@dimen/_10sdp"
                        android:paddingEnd="@dimen/_10sdp"
                        android:singleLine="true" />


                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSubmit"
                        style="@style/material_button"
                        android:layout_marginTop="@dimen/_30sdp"
                        android:minHeight="@dimen/_50sdp"
                        android:text="@string/submit"
                        android:textSize="@dimen/_12ssp"
                        app:cornerRadius="@dimen/_3sdp" />

                </LinearLayout>
            </LinearLayout>

        </androidx.core.widget.NestedScrollView>
    </RelativeLayout>

</layout>
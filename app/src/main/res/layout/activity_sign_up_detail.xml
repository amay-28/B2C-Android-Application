<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".auth.SignUpDetailActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/ic_header"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/_30sdp"
                android:paddingEnd="@dimen/_30sdp"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_20sdp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            style="@style/TextView12ssp"
                            android:fontFamily="@font/latobold"
                            android:text="@string/sign_up"
                            android:textSize="@dimen/_22sdp" />

                        <TextView
                            style="@style/TextView14ssp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:fontFamily="@font/latomedium"
                            android:text="@string/sign_in_to_create_acc"
                            android:textColor="@color/colorHint" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_bucket" />
                </LinearLayout>
                <EditText
                    style="@style/EditText12ssp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:background="@drawable/rect_back_with_corner"
                    android:hint="@string/shop_name"
                    android:imeOptions="actionNext"
                    android:inputType="textPersonName"
                    android:maxLength="30"
                    android:minHeight="@dimen/_50sdp"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:singleLine="true" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_below="@+id/imgShop"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:background="@drawable/rect_back_with_corner"
                    android:layout_gravity="center">
                    <Spinner
                        android:id="@+id/spnLanguage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"></Spinner>

                </LinearLayout>

                <EditText
                    style="@style/EditText12ssp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:background="@drawable/rect_back_with_corner"
                    android:hint="@string/address_line_one"
                    android:imeOptions="actionNext"
                    android:inputType="textPersonName"
                    android:maxLength="60"
                    android:minHeight="@dimen/_50sdp"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:singleLine="true" />

                <EditText
                    style="@style/EditText12ssp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:background="@drawable/rect_back_with_corner"
                    android:hint="@string/address_line_two"
                    android:imeOptions="actionNext"
                    android:inputType="textPersonName"
                    android:maxLength="60"
                    android:minHeight="@dimen/_50sdp"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:singleLine="true" />

                <EditText
                    style="@style/EditText12ssp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:background="@drawable/rect_back_with_corner"
                    android:hint="@string/city"
                    android:imeOptions="actionNext"
                    android:inputType="textPersonName"
                    android:maxLength="30"
                    android:minHeight="@dimen/_50sdp"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:singleLine="true" />

                <EditText
                    style="@style/EditText12ssp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:background="@drawable/rect_back_with_corner"
                    android:hint="@string/state"
                    android:imeOptions="actionNext"
                    android:inputType="textPersonName"
                    android:maxLength="30"
                    android:minHeight="@dimen/_50sdp"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:singleLine="true" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_below="@+id/imgShop"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:background="@drawable/rect_back_with_corner"
                    android:layout_gravity="center">
                    <Spinner
                        android:id="@+id/spnGstNo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"></Spinner>

                </LinearLayout>

                <EditText
                    style="@style/EditText12ssp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:background="@drawable/rect_back_with_corner"
                    android:hint="@string/email_optional"
                    android:imeOptions="actionNext"
                    android:inputType="textPersonName"
                    android:maxLength="30"
                    android:minHeight="@dimen/_50sdp"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:singleLine="true" />


                <com.google.android.material.button.MaterialButton
                    style="@style/material_button"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:minHeight="@dimen/_50sdp"
                    android:text="@string/submit"
                    android:textSize="@dimen/_12ssp"
                    app:cornerRadius="@dimen/_3sdp" />

            </LinearLayout>
            </LinearLayout>

        </androidx.core.widget.NestedScrollView>
    </RelativeLayout>





</layout>
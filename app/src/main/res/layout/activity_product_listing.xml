<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">

    <data>

        <variable
            name="productListing"
            type="com.eb.onebandhan.productListing.ProductListingActivity" />
    </data>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/_10sdp">

        <include
            android:id="@+id/header"
            layout="@layout/header_with_back"
            bind:productListing="@{productListing}" />


        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_below="@+id/header"
            android:background="@color/divider_line" />


        <LinearLayout
            android:id="@+id/llNoRecordFind"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:layout_below="@+id/view"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_no_product_found"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextView14ssp"
                android:layout_marginTop="@dimen/_30sdp"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/latomedium"
                android:text="@string/No_Product_Found"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextView14ssp"
                android:layout_marginTop="@dimen/_5sdp"
                android:gravity="center"
                android:textColor="@color/color_grey_text"
                android:fontFamily="@font/latoregular"
                android:text="@string/No_Product_Found_message" />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnContinue"
                style="@style/material_button"
                android:layout_margin="@dimen/_60sdp"
                android:minHeight="@dimen/_50sdp"
                android:text="@string/CONTINUE_SHOPPING"
                android:textSize="@dimen/_12ssp"
                app:cornerRadius="@dimen/_3sdp" />

        </LinearLayout>
        <RelativeLayout
            android:id="@+id/rlRoot"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/view"
            android:background="@color/white"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/llTop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:weightSum="1">

                <RelativeLayout
                    android:id="@+id/rlSort"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight=".4"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvSort"
                        style="@style/TextView14ssp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_sort"
                        android:drawablePadding="@dimen/_5sdp"
                        android:gravity="center"
                        android:padding="@dimen/_10sdp"
                        android:text="@string/Sort" />

                </RelativeLayout>

                <View
                    android:layout_width="@dimen/_1sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@color/divider_line" />

                <RelativeLayout
                    android:id="@+id/rlFilter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight=".4"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvFilter"
                        style="@style/TextView14ssp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_filter"
                        android:drawablePadding="@dimen/_5sdp"
                        android:gravity="center"
                        android:padding="@dimen/_10sdp"
                        android:text="@string/Filters" />

                </RelativeLayout>

            </LinearLayout>

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_below="@+id/llTop"
                android:background="@color/divider_line" />

            <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                android:id="@+id/swipeToRefresh"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/view2">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvProducts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp" />


            </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
            <!-- <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_below="@+id/view2"
                 android:orientation="vertical">

             <include layout="@layout/item_product_listing" />
             <include layout="@layout/item_product_listing" />
             <include layout="@layout/item_product_listing" />
             <include layout="@layout/item_product_listing" />
             <include layout="@layout/item_product_listing" />
             <include layout="@layout/item_product_listing" />
             <include layout="@layout/item_product_listing" />
             <include layout="@layout/item_product_listing" />
             <include layout="@layout/item_product_listing" />
             <include layout="@layout/item_product_listing" />
             <include layout="@layout/item_product_listing" />
             <include layout="@layout/item_product_listing" />
             <include layout="@layout/item_product_listing" />
             <include layout="@layout/item_product_listing" />
             </LinearLayout>-->
        </RelativeLayout>

    </RelativeLayout>
</layout>
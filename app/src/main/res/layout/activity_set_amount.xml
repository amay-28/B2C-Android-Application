<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        android:gravity="center"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/linearLayoutRoot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:background="@color/transparent"
            android:minHeight="@dimen/_80sdp"
            app:cardCornerRadius="@dimen/_5sdp">
            <ImageView
                android:id="@+id/ivCross"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_margin="@dimen/_5sdp"
                android:src="@drawable/ic_cross" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_41sdp"
                android:layout_marginRight="@dimen/_33sdp"
                android:orientation="vertical">



                <TextView
                    style="@style/TextView12ssp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_70sdp"
                    android:fontFamily="@font/latosemibold"
                    android:text="@string/Enter_Minimum_Amount" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/grey_border_box"
                    android:padding="@dimen/_10sdp"
                    android:inputType="number"
                    android:singleLine="true"
                    android:maxLength="4"/>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_39sdp"
                    android:layout_marginBottom="@dimen/_27sdp"
                    android:backgroundTint="@color/yellow"
                    android:paddingLeft="@dimen/_51sdp"
                    android:paddingTop="@dimen/_12sdp"
                    android:paddingRight="@dimen/_51sdp"
                    android:paddingBottom="@dimen/_12sdp"
                    android:text="@string/save"
                    android:layout_gravity="center"
                    />


            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</layout>
